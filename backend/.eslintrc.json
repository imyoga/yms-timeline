{
	"env": {
		"es2021": true,
		"node": true
	},

	"globals": {
		"process": true
	},

	"extends": [
		"eslint:recommended",
		"plugin:node/recommended" // Add the Node.js recommended ruleset
	],

	"parserOptions": {
		"ecmaVersion": 12,
		"sourceType": "module"
	},

	"rules": {
		"no-unused-vars": "warn",
		"no-console": "warn",
		"indent": ["error", 2],
		"quotes": ["error", "single"],
		"semi": ["error", "always"],
		"eqeqeq": ["warn", "always"],
		"no-trailing-spaces": ["error"]
	},

	"ignores": ["node_modules/**"]
}
